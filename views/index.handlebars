<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <h3>Burgers ready to eat</h3>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class="burger-list">{{this.burger_name}}
              <div class="col-md-5 text-center">
              <button type="button" class="btn btn-primary devour-btn" data-id="{{id}}">Devour it!</button>
              </div>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <h3>Burgers that have been eaten</h3>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="burger-list-eaten">{{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <form>
        <div class="form-group">
          <label id="input-label" for="add-burger-box">Order burger</label>
          <input type="text" class="form-control" id="add-burger-box" placeholder="Enter burger name">
        </div>
        <button type="submit" id="submit-burger" class="btn btn-primary">Order</button>
      </form>
    </div>
  </div>
</div>